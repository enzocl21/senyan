  <script>
    // Function to handle the reservation form submission
    function handleReservation() {
      const name = document.getElementById('nom').value;
      const email = document.getElementById('email').value;
      const type = document.getElementById('type_mobil_home').value;
      const arrivalDate = document.getElementById('date_arrivee').value;
      const numNights = document.getElementById('nombre_nuits').value;

      // Do something with the form data (e.g., send it to a server)
      console.log('Reservation Details:');
      console.log('Name:', name);
      console.log('Email:', email);
      console.log('Mobil-home Type:', type);
      console.log('Arrival Date:', arrivalDate);
      console.log('Number of Nights:', numNights);

      // Show a success message (you can customize this according to your needs)
      alert('Votre réservation a été enregistrée avec succès ! Nous vous contacterons bientôt.');

      // Reset the form after successful submission
      document.getElementById('reservation-form').reset();
    }

    // Attach the handleReservation function to the reservation button click event
    document.getElementById('reservation-form').addEventListener('submit', function (event) {
      event.preventDefault(); // Prevent the default form submission behavior
      handleReservation();
    });
  </script>
